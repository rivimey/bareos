#! /bin/sh
#
# bareos       This shell script takes care of starting and stopping
#	       the bareos Director daemon
#
# chkconfig: 2345 90 9
# description: Backup Archiving REcovery Open Sourced.
#
#  For Bareos release 18.2.3 (01 Jun 2018) -- darwin
#

RETVAL=0
case "$1" in
    start)
       echo "Starting the Bareos Director: "
       /Users/ruth/CLionProjects/bareos-root/sbin/bareos-dir $2 -c /Users/ruth/CLionProjects/bareos-root/etc/bareos/bareos-dir.conf
       RETVAL=$?
       echo
       [ $RETVAL -eq 0 ] && touch //Users/ruth/CLionProjects/bareos-root/var/lib/bareos/bareos-dir
       ;;
    stop)
       echo "Stopping the Director daemon: "
#      killproc /Users/ruth/CLionProjects/bareos-root/sbin/bareos-dir
       RETVAL=$?
       echo
       [ $RETVAL -eq 0 ] && rm -f //Users/ruth/CLionProjects/bareos-root/var/lib/bareos/bareos-dir
       ;;
    restart)
       $0 stop
       sleep 5
       $0 start
       ;;
    *)
       echo "Usage: $0 {start|stop|restart}"
       exit 1
       ;;
esac
exit 0
